<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <color name="barraNotificaciones1">#1566e0</color>
    <color name="barraNotificaciones2">#00167f</color>


    <style name="Theme.Firebasetest" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item> <!--custom animation style-->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Main" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemePrimeraActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item> <!--custom animation style-->
        <item name="colorPrimary">@color/barraNotificaciones1</item>
        <item name="colorPrimaryDark"> @color/barraNotificaciones1 </item> <!--Color naranja-->
        <item name="colorAccent">@color/barraNotificaciones1</item>
    </style>

    <style name="ThemeSecondActivity" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/barraNotificaciones2</item>
        <item name="colorPrimaryDark"> @color/barraNotificaciones2 </item> <!--Color naranja-->
        <item name="colorAccent">@color/barraNotificaciones2</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

</resources>